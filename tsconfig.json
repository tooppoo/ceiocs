{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "newLine": "lf",
    "skipLibCheck": true
  },
  "include": [
    "./build.ts",
    "./packages/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
