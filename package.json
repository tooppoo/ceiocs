{
  "name": "ceiocs",
  "version": "0.2.1",
  "description": "This library allows developers to use conditional 'expressions' instead of conditional 'statements'",
  "homepage": "https://github.com/tooppoo/ceiocs",
  "repository": "https://github.com/tooppoo/ceiocs",
  "main": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "bugs": {
    "email": "tooppoo56@gmail.com",
    "url": "https://github.com/tooppoo/ceiocs"
  },
  "keywords": [
    "conditional expression instead of conditional statements",
    "conditional expression",
    "conditional statements"
  ],
  "author": "philomagi <tooppoo56@gmail.com>",
  "license": "MIT",
  "type": "module",
  "private": false,
  "scripts": {
    "build": "bun --bun ./build.ts && bun run types",
    "types": "bunx --bun tsc -p ./tsconfig.build.json",
    "lint": "bunx --bun biome lint --write",
    "changeset": "bunx --bun changeset",
    "check-types": "bunx --bun tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@types/bun": "1.3.3",
    "typescript": "5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
